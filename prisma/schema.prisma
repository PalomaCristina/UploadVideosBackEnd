generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id String @id @default(uuid())
  name String
  path String
  transcription String?
  createAt DateTime @default(now())
}
//@id quer dizer que ser√° uma chave primaria

model Prompt {
  id String @id @default(uuid())
  title String
  template String
}